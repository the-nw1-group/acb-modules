            "label": "DEBUG Build quad-ir",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/misc/quad-ir"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/misc/quad-ir"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(Warning|Error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
